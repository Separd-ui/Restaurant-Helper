<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_circle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_name_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="Пицца маргарита"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constrainedWidth="false"
        app:layout_constraintEnd_toEndOf="@+id/menu_circle"
        app:layout_constraintStart_toStartOf="@+id/menu_circle"
        app:layout_constraintTop_toBottomOf="@+id/menu_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>